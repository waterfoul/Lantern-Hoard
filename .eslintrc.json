{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "fullstack",
  "rules": {
    "arrow-parens": ["error", "always"],
    "semi": ["error", "always"],
    "indent": ["error", "tab"],
    "space-infix-ops": ["error"],
    "no-shadow": ["error"],
    "no-trailing-spaces": ["error"],
    "eol-last": ["error"],
    "no-undef": ["error"],
    "no-unused-expressions": ["warn"],
    "id-length": ["off"],
    "react/prop-types": ["off"],
    "no-unused-vars": ["error"],
    "complexity": ["error"]
  }
}